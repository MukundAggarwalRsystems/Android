<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rsi.httpsimplerequest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_serverresponse"
        android:layout_centerHorizontal="true"
        android:text="           "
        android:layout_below="@+id/button_all" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_url"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_geturl" />

    <Button
        android:text="GET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_geturl"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:onClick="buttonGET" />

    <Button
        android:text="all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_all"
        android:layout_below="@+id/button_geturl"
        android:layout_alignParentStart="true"
        android:onClick="buttonALL" />

</RelativeLayout>
